{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "declaration": true,
    "declarationMap": false,
    "outDir": "./lib",
    "downlevelIteration": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "tests"]
}
